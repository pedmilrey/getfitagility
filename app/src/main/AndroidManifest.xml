<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.agility.getfit.getfitagility">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.tapautomatic.TapAutomaticActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.modeselection.ModeSelectionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.selectionlevelmenu.SelectionLevelActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.tap.TapActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>